<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vallies</title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }

      h1 {
        color: #333;
        text-align: center;
      }

      h3 {
        color: #555;
        text-align: center;
      }

      .commands {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
      }

      .command {
        width: auto;
        height: 100px;
        padding: 15px;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .command-title {
        font-weight: bold;
        color: #333;
      }

      .command-description {
        font-size: 0.9em;
        color: #666;
      }

      .command-footnote {
        font-weight: bold;
        font-size: 0.8em;
      }

      .admin {
        color: red;
      }

      .general {
        color: greenyellow;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Vallies</h1>
      <h3>Prefix: <%= env.PREFIX %></h3>
      <div class="commands">
        <% bot.commands.forEach( (command) => { %> <% if (!command.devOnly) { %>
        <div class="command">
          <div class="command-title"><%= command.name %></div>
          <div class="command-description"><%= command.description %></div>
          <div class="command-footnote">
            <% if (command.adminOnly) { %>
            <p class="admin">Admin</p>
            <% } else { %>
            <p class="general">General</p>
            <% } %>
          </div>
        </div>
        <% } %> <% } )%>
      </div>
    </div>
  </body>
</html>
